# An insecure dockerfile that uses default settings and runs as root

FROM python:3.12

WORKDIR /app

ENV DEMO_USER=admin
ENV DEMO_PASS=password
ENV APP_SECRET=dev-unsafe-secret-change-me
ENV ENABLE_DEBUG_ENV=1

COPY . /app

RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 5000

CMD ["python", "app.py"]
